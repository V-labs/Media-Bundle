<?xml version="1.0" encoding="utf-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Vlabs\MediaBundle\Entity\Media"></mapped-superclass>

    <entity name="Vlabs\MediaBundle\Entity\Media" inheritance-type="SINGLE_TABLE">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="path" type="string" column="path" length="255"/>
        <field name="filename" type="string" column="filename" length="255"/>
        <field name="mimeType" type="string" column="mime_type" length="255"/>
    </entity>

</doctrine-mapping>
